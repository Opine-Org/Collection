{
    "name": "opine/collection",
    "type": "library",
    "description": "RESTful API for MongoDB collections",
    "keywords": [
        "MongoDB",
        "JSON",
        "REST"
    ],
    "license": "MIT",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php"             : ">=5.5.0",
        "opine/urlid"     : "dev-master",
        "opine/interfaces": "1.0.0",
        "symfony/yaml"    : "2.6.1",
        "opine/db"        : "dev-master",
        "opine/route"     : "3.0.1",
        "opine/layout"    : "dev-master",
        "opine/queue"     : "dev-master",
        "opine/config"    : "3.0.0",
        "opine/cache"     : "2.0.2",
        "opine/pubsub"    : "dev-master",
        "opine/search"    : "dev-master",
        "opine/build"     : "dev-master",
        "opine/bundle"    : "dev-master",
        "opine/language"  : "dev-master",
        "opine/person"    : "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit" : "3.7.32"
    },
    "autoload": {
        "psr-4": {
            "Opine\\Collection\\": "src/"
        }
    }
}